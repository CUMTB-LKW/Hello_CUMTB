四、编程题（每题10分，共20分）
1. #include <stdio.h>
  #include <math.h>
  int main()
  {
int n, i=0, j, a[10];
scanf(“%d”, &n);
while(n){	
 a[i++] = n%10;
 n = n/10;
}//分解各位上的数字，任意位数的整数皆可
//以下为任意位数整数的乘式分解
printf(“%d*%.0f”, a[i-1], pow(10, i-1)); 	//最高位对应的乘式
for(j=i-2;j>=0; j--)	//最高位以下的乘式，系数为0的乘式不输出
  if(a[j] != 0) printf(“+%d*%.0f”, a[i], pow(10, j));
printf(“\n”);
return 0;
  }	
2. int count(float score[], int n)
  {
int cnt=0, i;
float ave=0;
for(i=0; i<n; i++) ave+= score[i];
ave = ave/n;
for(i=0; i<n; i++)
  if(score[i] > ave) cnt++;
return cnt;
  }
