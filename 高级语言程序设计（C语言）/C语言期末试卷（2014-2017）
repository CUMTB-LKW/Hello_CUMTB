四、编程题（每题10分，共20分）
1. 
#include <stdio.h>
char *convert(int x, char *s)
{
  int r, i=0, j;
  while(x){
    r = x%16;
    if(r>=10) s[i++] = r-10+'A';
    else s[i++] = r+'0';
    x = x/16;
  }
  s[i] = 0;
  for(j=0; j<i/2; j++)
  {
    char c = s[j];
    s[j] = s[i-1-j];
    s[i-1-j] = c;
  }
  return s;
}

int main()
{
  int a;
  char s[20];
  scanf("%d", &a);
  convert(a, s);
  puts(s);
  return 0;
}

2.
int count(char *s)
{
  int i, j, cnt = 0;
  for(i=0; s[i] != 0; i++)
  {
    for(j=0; j<i; j++)
    {  
       if(s[j] == s[i]) break;
    }
    if(j == i) cnt++;
  }
  return cnt;
}
